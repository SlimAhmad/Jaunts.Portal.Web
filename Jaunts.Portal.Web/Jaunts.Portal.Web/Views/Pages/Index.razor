@page "/index"

<PageTitle>Index</PageTitle>


 <Jaunts.Portal.Web.Views.Components.AdminComponents.CardComponents.StatsCardComponent />
    
 <RidesComponent/>

  <div class="flex flex-col justify-between rounded mt-2 bg-gray-900 p-7">
            <div class="flex items-center justify-between">
              <h2 class="text-[20px] font-medium text-white">
                Recent transactions
              </h2>
              <button
                class="inline-flex items-center gap-x-1 rounded mt-4 bg-gray-700 py-2 px-4 text-sm text-gray-400 hover:text-white"
              >
                View All
              </button>
            </div>
            <table>
              <tbody>
                <tr
                  v-for="transaction in recentTransactions"
                  class="border-b border-gray-700 last:border-none"
                >
                  <td class="py-4">
                    <div class="flex items-center gap-x-4">
                      <div
                        class="flex items-center justify-center rounded-full p-2"
                        :class="
                          transaction.type === 'Send transaction'
                            ? 'bg-indigo-700'
                            : 'bg-green-400'
                        "
                      >
                            <!--Icon-->
                      </div>
                      <span class="text-sm text-white">
                        {{ transaction.type }}
                      </span>
                    </div>
                  </td>
                  <td class="py-4">
                    <div class="flex items-center gap-x-2">
                      <div
                        class="flex items-center justify-center rounded-full bg-gray-700 p-2"
                      >
                 <!--Icon-->
                      </div>
                      <span class="text-sm text-gray-400">
                        {{ transaction.date }}
                      </span>
                    </div>
                  </td>
                  <td class="p-4">
                    <span class="text-sm text-white">
                      {{ transaction.amount }}
                    </span>
                  </td>
                  <td class="p-4">
                    <span class="text-sm text-white">
                      {{ transaction.balance }}
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="flex flex-col justify-between rounded mt-4 bg-gray-900 p-7">
            <div class="flex items-center justify-between">
              <h2 class="text-[20px] font-medium text-white">Invoices</h2>
              <button
                class="inline-flex items-center gap-x-1 rounded mt-4 bg-gray-700 py-2 px-4 text-sm text-gray-400 hover:text-white"
              >
            <!--Icon-->
                <span>New Invoices</span>
              </button>
            </div>
            <table class="mt-4">
              <thead>
                <tr>
                  <td class="py-1 text-sm text-gray-400">No</td>
                  <td class="py-1 text-sm text-gray-400">Date</td>
                  <td class="py-1 text-sm text-gray-400">Client</td>
                  <td class="py-1 text-sm text-gray-400">Amount</td>
                  <td class="py-1 text-sm text-gray-400">Status</td>
                </tr>
              </thead>
              <tbody>
                <tr
                  v-for="invoice in invoices"
                  class="border-b border-gray-700 last:border-none"
                >
                  <td class="py-4">
                    <span class="text-sm font-medium text-white">
                      {{ invoice.no }}
                    </span>
                  </td>
                  <td class="py-4">
                    <span class="text-sm text-gray-400">
                      {{ invoice.date }}
                    </span>
                  </td>
                  <td class="py-4">
                    <div class="flex items-center gap-x-2">
                      <img
                        :src="invoice.avatar"
                        alt=""
                        class="h-7 w-7 rounded-full object-cover"
                      />
                      <span class="text-sm text-white">
                        {{ invoice.name }}
                      </span>
                    </div>
                  </td>
                  <td class="py-4">
                    <span class="text-sm text-white">
                      {{ invoice.amount }}
                    </span>
                  </td>
                  <td class="py-4">
                    <div
                      class="flex items-center justify-center gap-x-2 rounded mt-4 border py-2 px-1"
                      :class="
                        invoice.status === 'Successful'
                          ? 'border-green-400/10 bg-green-700/20 text-green-400'
                          : 'border-indigo-400/10 bg-indigo-700/20 text-indigo-400'
                      "
                    >
                      <span
                        class="h-2 w-2 rounded-full"
                        :class="
                          invoice.status === 'Successful'
                            ? 'bg-green-400'
                            : 'bg-indigo-400'
                        "
                      />
                      <span class="text-xs">
                        {{ invoice.status }}
                      </span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>


    



