 @page "/reset/password"
@layout NestedLayout

   <div class="py-6">
        <div>
            <TextBoxBase @ref=@ResetPasswordEmailTextBox
                         @bind-Value=@Email
                         Placeholder="Your email ?"
                         IsDisabled=true
                         CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
        </div>

        <div>
            <TextBoxBase @ref=@ResetPasswordPasswordTextBox
                         @bind-Value=@ResetPasswordView.Password
                         Placeholder="Your password ?"
                         CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
        </div>

        <div>
            <TextBoxBase @ref=@ResetPasswordConfirmPasswordTextBox
                         @bind-Value=@ResetPasswordView.ConfirmPassword
                         Placeholder="Retype password ?"
                         CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
        </div>

        <div class="mt-6">
            <ButtonBase @ref=@SubmitButton
                        OnClick=@ResetPasswordAsync
                        Label="Reset"
                        CssClass="w-full px-6 py-3 rounded-xl bg-sky-500 transition hover:bg-sky-600 focus:bg-sky-600 active:bg-sky-800" />
            <a href="/signup" type="reset" class="w-max p-3 -ml-3">
                <span class="text-sm tracking-wide text-blue-600">Create new account</span>
            </a>
        </div>
        <SpinnerBase @ref=@Spinner />
    </div>

