<div class="py-6">
    <div>
        <TextBoxBase 
            @ref=@SignUpEmailTextBox
            @bind-Value=@SignUpView.Email
            Placeholder="Your email ?"
            CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>
    <div>
        <TextBoxBase @ref=@SignUpUserNameTextBox
                     @bind-Value=@SignUpView.Username
                     Placeholder="Username ?"
                     CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>

    <div>
        <TextBoxBase @ref=@SignUpFirstNameTextBox
                     @bind-Value=@SignUpView.FirstName
                     Placeholder="First name ?"
                     CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>

    <div>
        <TextBoxBase @ref=@SignUpLastNameTextBox
                     @bind-Value=@SignUpView.LastName
                     Placeholder="Last name ?"
                     CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>

    <div>
        <TextBoxBase @ref=@SignUpPhoneNumberTextBox
                     @bind-Value=@SignUpView.PhoneNumber
                     Placeholder="Phone No."
                     CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>

    <div>
        <TextBoxBase 
            @ref=@SignUpPasswordTextBox
            @bind-Value=@SignUpView.Password
            Placeholder="Password ?"
            CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
    </div>

    <div class="flex flex-col items-end">
        <TextBoxBase 
            @ref=@SignUpPasswordRetypeTextBox
            @bind-Value=@SignUpView.Password
            Placeholder="Retype Password "
                     CssClass="w-full py-3 px-6 ring-1 ring-gray-300 rounded-xl placeholder-gray-600 bg-transparent transition disabled:ring-gray-200 disabled:bg-gray-100 disabled:placeholder-gray-400 invalid:ring-red-400 focus:invalid:outline-none" />
        <a href="/forgotten/password" type="reset" class="w-max p-3 -mr-3">
            <span class="text-sm tracking-wide text-blue-600">Forgot password ?</span>
        </a>
    </div>

    <div>
        <ButtonBase Label="Create Account"
                    @ref=@SubmitButton
                    OnClick=@SignUpAsync
                    CssClass="w-full px-6 py-3 rounded-xl bg-sky-500 transition hover:bg-sky-600 focus:bg-sky-600 active:bg-sky-800" />
        <a href="/"  class="w-max p-3 -ml-3">
            <span class="text-sm tracking-wide text-blue-600 mt-4">Already have an account ?</span>
        </a>
    </div>

    <SpinnerBase @ref=@Spinner />
</div>
